[Unit]
Description=Syncthing Container

[Container]
Image=docker.io/syncthing/syncthing:latest
AutoUpdate=registry
LogDriver=none
UserNS=keep-id
Volume=syncthing-config:/var/syncthing/config:rw,Z,U
Volume=/var/mnt/backup/sync:/var/syncthing/Sync:rw,Z,U
Network=proxy.network
ExposeHostPort=8384
PublishPort=22000:22000/tcp
PublishPort=22000:22000/udp
PublishPort=21027:21027/udp

[Service]
Restart=always
RestartSec=5
TimeoutStartSec=90
TimeoutStopSec=30

[Install]
WantedBy=default.target
